<Window x:Class="Punchers.View.Punchers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Punchers"
        mc:Ignorable="d"
        Title="Punchers" Height="450" Width="800">

    <Grid>
        <!-- Utilisez un ImageBrush pour définir l'image en arrière-plan -->
        <Grid.Background>
            <ImageBrush ImageSource="/images/background.jpg" />
        </Grid.Background>

        <Grid>
            <!-- Texte à trembler -->
            <TextBlock Text="Boxe posture to start the game" 
                    Style="{StaticResource TremblingTextBlockStyle}" 
                    Visibility="{Binding StartTextVisibility}" />
            
        </Grid>
    </Grid>
</Window>
